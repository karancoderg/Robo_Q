# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/delivery_robot
MONGODB_TEST_URI=mongodb://localhost:27017/delivery_robot_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (NodeMailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Twilio Configuration (SMS/Phone OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Application Settings
FRONTEND_URL=http://localhost:3000
MOCK_MODE=true
OTP_EXPIRY_MINUTES=10

# Robot Configuration
ROBOT_API_URL=http://localhost:8080
ROBOT_API_KEY=robot-api-key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
